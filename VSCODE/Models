//Subject.php
<?php

namespace App\Models;

use Illuminate\Database\Eloquent\Factories\HasFactory;
use Illuminate\Database\Eloquent\Model;

class Subject extends Model
{
    use HasFactory;

    protected $fillable = [
        'subject_code',
        'subject_name',
        'credit_hours',
    ];
}

//User.php
<?php

namespace App\Models;

use Illuminate\Foundation\Auth\User as Authenticatable; // Use this instead of Model
use Illuminate\Notifications\Notifiable;

class User extends Authenticatable
{
    use Notifiable; // Required for notifications

    // Fillable fields for the User
    protected $fillable = [
        'name', 'email', 'password', 'matrics_number',
    ];

    // Hidden fields for the User model
    protected $hidden = [
        'password', 'remember_token',
    ];

    // Cast email_verified_at to a DateTime instance
    protected $casts = [
        'email_verified_at' => 'datetime',
    ];
}
